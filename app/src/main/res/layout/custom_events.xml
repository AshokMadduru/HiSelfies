<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/eventimage1"
            android:src="@drawable/smile" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/event_name1"
                    android:textColor="@color/facebook_color"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:inputType="textMultiLine"
                    android:text="Praneetha"
                    android:layout_marginLeft="5dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/share1"
                    android:src="@mipmap/share"
                    android:layout_gravity="right"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/facebook_color"
                    android:layout_toEndOf="@id/event_name1"
                    android:layout_toRightOf="@id/event_name1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/point"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"/>

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="90"
                        android:id="@+id/points_number1"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gold1"
                    android:src="@mipmap/gold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="50"
                    android:id="@+id/goldPoints1"
                    android:textColor="@color/facebook_color"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/gold1"
                    android:layout_toEndOf="@id/gold1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/silver1"
                    android:src="@mipmap/gold"
                    android:layout_toRightOf="@id/goldPoints1"
                    android:layout_toEndOf="@id/goldPoints1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="40"
                    android:id="@+id/silverPoints1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/facebook_color"
                    android:layout_toRightOf="@id/silver1"
                    android:layout_toEndOf="@id/silver1"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/flag1"
                    android:src="@mipmap/flag"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/eventimage2"
            android:src="@drawable/smile" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="20dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/event_name2"
                    android:textSize="15sp"
                    android:textColor="@color/facebook_color"
                    android:inputType="textMultiLine"
                    android:text="Anu"
                    android:layout_marginLeft="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@color/facebook_color"
                    android:layout_toEndOf="@id/event_name2"
                    android:layout_toRightOf="@id/event_name2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/point"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="90"
                        android:id="@+id/points_number2"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/share2"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/share"
                    android:layout_marginRight="5dp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/gold2"
                    android:src="@mipmap/gold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="50"
                    android:id="@+id/goldPoints2"
                    android:textColor="@color/facebook_color"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/gold2"
                    android:layout_toEndOf="@id/gold2"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/silver2"
                    android:src="@mipmap/gold"
                    android:layout_toRightOf="@id/goldPoints2"
                    android:layout_toEndOf="@id/goldPoints2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="40"
                    android:id="@+id/silverPoints2"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/facebook_color"
                    android:layout_toRightOf="@id/silver2"
                    android:layout_toEndOf="@id/silver2"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/flag2"
                    android:src="@mipmap/flag"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
